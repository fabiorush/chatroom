<h4 class="ui center aligned medium icon header">
  <i class="circular orange power icon"></i>
  Log in to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with class: "ui form" do %>
        <div class="field">
          <%= label_tag "Username" %>
          <div class="ui left icon input">
            <%= text_field_tag "username", nil, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= label_tag "Password" %>
          <div class="ui left icon input">
            <%= password_field_tag "password", nil, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= submit_tag "Login", class: "ui orange submit button login" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big orange button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
