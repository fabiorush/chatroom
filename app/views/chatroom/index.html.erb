<h4 class="ui center aligned medium icon header">
  <i class="circular orange coffee icon"></i>
  Say something
</h4>

<div class="ui two column grid">

  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div id="content-box" class="content">
        <div id="msgbox" class="ui feed">
          <%=  render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_with url: message_path, remote: true, class: "ui reply form" do %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= text_field_tag :body, nil, placeholder: "Enter a message...", id: "text-box" %>
              <%= button_tag type: 'submit' do
                "<i class=\"bordered inverted orange edit icon\"></i>".html_safe
              end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>


  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>